<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LabDataActivity">

    <LinearLayout
        android:id="@+id/f_lnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.8"
            >

            <AutoCompleteTextView
                android:id="@+id/lab_drop_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Select Lab" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_tv"
            android:text="Today"
            android:layout_margin="5dp"
            android:clickable="true"
            android:ems="6"
            android:textSize="20sp"
            android:layout_weight="0.2"
            android:textAppearance="?attr/textAppearanceHeadline6"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lb_rel"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/f_lnr">

        <Button
            android:id="@+id/lab_view_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="View" />
        <TextView
            android:id="@+id/lb_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@+id/lab_view_data"
            android:ems="6"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lab_data_rcv"
            android:layout_below="@+id/lb_date_tv"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>