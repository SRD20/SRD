<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <EditText
        android:id="@+id/lb_temp"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@drawable/cust_edittext"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/ic_temp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Temperature"
        android:inputType="numberSigned" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <EditText
        android:id="@+id/lb_humid"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@drawable/cust_edittext"
        android:drawableStart="@drawable/ic_humid"
        android:drawablePadding="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:ems="10"
        android:hint="Humidity"
        android:inputType="numberSigned" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>


    <LinearLayout
        android:id="@+id/btnlayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/lb_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:text="Save"/>

        <Button
            android:id="@+id/lb_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>